{
	"src_folders": [ "tests" ],
	"detailed_output": true,
	"globals_path": "globals/globalModule",
	"page_objects_path": [ "pages" ],
	"webdriver": {
		"start_process": true,
		"server_path": "node_modules/.bin/chromedriver",
		"port": 9515
	},

	"test_settings": {
		"default": {
			"screenshots": {
				"enabled": true,
				"on_failure": true,
				"on_error": false,
				"path": "screenshots"
			},
			"launch_url": "https://ultimateqa.com",
			"desiredCapabilities": {
				"browserName": "chrome"
			}
		}
	}
}
